{
  "$schema": "./schema.json",
  "width": 900,
  "height": 465,
  "padding": 5,

  "data": [
    {
      "name": "table",
      "values": "",
      "source":"",
      "url":""
    }
  ],

  "scales": [
    {
      "name": "key",
      "type": "point",
      "range": "width",
      "domain": {"data": "table", "field": "x"}
    },
    {
      "name": "value",
      "type": "linear",
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {"data": "table", "field": "y"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {"data": "table", "field": "z"}
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "key"},
    {"orient": "left", "scale": "value"}
  ],

  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "name": "series",
          "data": "table",
          "groupby": "z"
        }
      },
      "marks": [
        {
          "type": "line",
          "from": {"data": "series"},
          "encode": {
            "enter": {
              "x": {"scale": "key", "field": "x"},
              "y": {"scale": "value", "field": "y"},
              "stroke": {"scale": "color", "field": "z"},
              "strokeWidth": {"value": 2}
            },
            "update": {
              "interpolate": {"value": "linear"},
              "fillOpacity": {"value": 1}
            },
            "hover": {
              "fillOpacity": {"value": 0.7}
            }
          }
        }
      ]
    }
  ]
}
